#########
# To be used inside script files only
export __scriptsDir="$HOME/.scripts"

# ///
export __projectsDir="/local/scratch/$USER"
export __qtDir="$__projectsDir/qtcreator/qtcreator"
#
#########

# General purpose
export MTAS_IP="192.168.83.100"
export SCRATCH="$__projectsDir"

# /// gerrit
export dev="HEAD:refs/for/develop"
export ddraft="HEAD:refs/drafts/develop"

export master="HEAD:refs/for/master"
export mdraft="HEAD:refs/drafts/master"

# Custom prompt with git branch highlighting
source $__scriptsDir/gitBranchInPrompt.bash

alias f="find"
alias h="head -n"
alias t="tail -n"
alias x="xargs"
alias xi="xargs -I"
alias rl="readlink -f"

GREP_FLAGS="--color=always"
alias g="grep"
alias gi="grep -i"
alias gc="grep $GREP_FLAGS"
alias gci="grep -i $GREP_FLAGS"

alias extract="$__scriptsDir/ExtractLastOrSpecified.sh"
alias extractAll="$__scriptsDir/ExtractAll.sh"

alias last="$__scriptsDir/LastN.sh"
alias prev="last 2 | t 1"

alias cdl='cd `last`'
alias cdp="cd $__projectsDir"
alias cdf="cd $__projectsDir/ft"
alias cdm="cd $__projectsDir/mtas_design"
alias cdt="cd $__qtDir/toolkit"

alias psd="pushd `pwd` > /dev/null ; cd -"
alias ppd="popd > /dev/null"

alias callflow_grep="$__projectsDir/mtas_design/tools/utils/trace/callflow_grep.pl"

alias ctags="$__scriptsDir/CreateAndTruncateCTags.sh"

alias connectCba="$__scriptsDir/ConnectToCbaSim.bash"

alias share="$__scriptsDir/Share.sh"

alias compareAlien="vimdiff ~/tmp/expected.txt ~/tmp/received.txt"

# Disable/enable git hooks in FT repo
alias f_disableHooks="mv $__projectsDir/ft/.git/hooks $__projectsDir/ft/.git/hooks.bak"
alias f_enableHooks="mv $__projectsDir/ft/.git/hooks.bak $__projectsDir/ft/.git/hooks"

# Disable/enable git hooks in Design repo
alias d_disableHooks="mv $__projectsDir/mtas_design/.git/hooks $__projectsDir/mtas_design/.git/hooks.bak"
alias d_enableHooks="mv $__projectsDir/mtas_design/.git/hooks.bak $__projectsDir/mtas_design/.git/hooks"

alias SOURCE_CBA="(cdm && cd /tas/tas_code/imsas/src/ && source cba_setup)"
alias SOURCE_FT="(cdf && source setup)"
alias SOURCE_TOOLKIT="(cdt && source setup-toolkit.bash)"

alias sigflow="$__scriptsDir/SigflowWithIp.sh"
# alias web_sigflow="xdg-open https://mtas-sigflow.sero.wh.rnd.internal.ericsson.com/"     # Open in default browser
alias web_sigflow="firefox https://mtas-sigflow.sero.wh.rnd.internal.ericsson.com/"

alias qt="$__qtDir/qtcreator-run.sh"

# copy-paste
alias c="xclip"
alias v="xclip -o"

# xclip is not available on WSL environment, thus this paste.exe variant is to be used
# get paste.exe here:
# c3scripts.com/tutorials/msdos/paste.html
#alias c="clip.exe"
#alias v="paste.exe"
